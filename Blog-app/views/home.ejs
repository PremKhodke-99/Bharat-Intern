<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Home</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
        <% blog.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.body %></p>
                </div>
              </div>
        <% }) %>
    </div>

    <%- include('./partials/script') %>
</body>

</html>