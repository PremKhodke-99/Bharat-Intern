<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-3">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Image</label>
                    <input type="file" name="coverImage" class="form-control" id="coverImage" aria-describedby="coverImage" />
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">
                        <h5>Title</h5>
                    </label>
                    <input type="text" name="title" class="form-control" id="title" aria-describedby="title" />
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="body" placeholder="Type here" id="body"></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <%- include('./partials/script') %>
</body>

</html>